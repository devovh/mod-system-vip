[worldserver]

########################################
# SYSTEM VIP CONFIGURATION
########################################
#
#    SystemVip.Announce
#        Description: Enables a module message upon login.
#        Default:     0 - Disabled
#                     1 - Enabled
#

SystemVip.Announce = 0

########################################
#
#    SystemVip.TimeVip
#        Description: Time in days to add for each subscription.
#        Default:     7
#

SystemVip.TimeVip = 7

########################################
#
#    SystemVip.Token
#        Description: Token to purchase a VIP subscription.
#        Default:    29736
#

SystemVip.Token = 29736

########################################
#
#    SystemVip.TokenAmount
#        Description: Necessary quantity.
#        Default:     10
#

SystemVip.TokenAmount = 10

########################################
#
#    SystemVip.TokenIcon
#        Description: Token icon.
#        Default:     "|TInterface/ICONS/inv_misc_rune_05:15:15:-15:0|t"
#

SystemVip.TokenIcon = "|TInterface/ICONS/inv_misc_rune_05:15:15:-15:0|t"

########################################
# SYSTEM VIP ADVANTAGES CONFIGURATION
########################################
#
#    SystemVip.LoginAnnounce
#        Description: Activate a special welcome announcement for VIP users.
#        Default:     0 - Disabled
#                     1 - Enabled
#

SystemVip.LoginAnnounce = 0

########################################
#
#    SystemVip.LoginAnnounceMessage
#        Description: Message to display in the welcome message. The %s symbol is the player's name.
#        Default:     "Player Vip: %s has logged in."
#

SystemVip.LoginAnnounceMessage = "Player Vip: %s has logged in."

########################################
#
#    SystemVip.EnableRateCustom
#        Description: Activate custom rates for VIP users.
#        Default:     0 - Disabled
#                     1 - Enabled
#

SystemVip.EnableRateCustom = 1

########################################
#
#    SystemVip.RateXP
#        Description: Defines the experience rate for VIP users. Set to 1 if you want a normal rate.
#        Default:     1
#

SystemVip.RateXP = 2

########################################
#
#    SystemVip.ProfessionRate
#        Description: Defines the amount of the profession fee for VIP users. Set to 1 if you want a normal fee.
#        Default:     1
#

SystemVip.ProfessionRate = 1

########################################
#
#    SystemVip.GoldRate
#        Description: Defines the gold rate for VIP users. Set to 1 if you want a normal rate.
#        Default:     1
#

SystemVip.GoldRate = 1

########################################
#
#    SystemVip.HonorRate
#        Description: Defines the honor-earning rate for VIP users. Set to 1 for a normal rate.
#        Default:     1
#

SystemVip.HonorRate = 2

########################################
#
#    SystemVip.GhostMount
#        Description: Activates a mount when the VIP player dies and becomes a ghost.
#        Default:     0 - Disabled
#                     1 - Enabled
#

SystemVip.GhostMount = 0

